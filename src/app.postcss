@tailwind base;
@tailwind components;
@tailwind utilities;

main {
  color: var(--text-color);
}

.title {
  @apply mb-4 mt-3 text-4xl text-primary;
}

.subtitle {
  @apply mb-3 mt-5 text-2xl;
}

.description {
  @apply prose prose-neutral dark:prose-invert;
}

.search-results {
  @apply p-2 pr-3;
}

.search-item {
  @apply mb-2 block w-full cursor-pointer rounded border-none bg-none p-2 text-left text-base outline-none duration-100 ease-out hover:bg-muted;
}

.stats {
  @apply grid gap-2;
  grid-template-columns: repeat(auto-fill, minmax(10rem, 1fr));
}

.stats dt {
  @apply text-sm;
  color: var(--text-color-disabled);
}

.tag {
  @apply mb-2 mr-2 inline-block rounded-sm bg-disabled px-2 py-1 text-sm last:mr-0;
  color: var(--secondary-text-color);
}

*:focus-visible {
  @apply outline-2 outline-offset-2 outline-primary;
}

.description table {
  @apply text-sm;
  border: 1px solid var(--surface-color);
  background: var(--background-color);
}

.description th {
  @apply font-semibold;
}

.description th,
.description td {
  @apply border border-gray-700 px-2 py-1;
}

.levels {
  margin-bottom: 1rem;
  border-radius: 0.5rem;
  border-collapse: collapse;
  border-spacing: 0;
  background: #232632;
  width: fit-content;
}

.levels th {
  padding: 0.2rem 1rem;
  color: rgba(255, 255, 255, 0.7);
  font-size: 0.8em;
  text-align: center;
}

.levels td {
  padding: 0.2rem 1rem;
}

.levels td:first-child {
  text-align: center;
}

.levels tbody tr:nth-child(odd) {
  background-color: rgba(0, 0, 0, 0.05);
}
